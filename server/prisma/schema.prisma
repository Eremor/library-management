generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  USER
}

model User {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  userName String
  email String @unique
  password String
  createdAt DateTime @default(now())
  role Role @default(USER)
  loans Loan[]
  @@map("users")
}

model Book {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  bookTitle String
  author String
  publicYear Int
  gener String
  status Boolean
  loans Loan[]
  @@map("books")
}

model Loan {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  bookId String @db.ObjectId
  book Book @relation(fields: [bookId], references: [id])
  userId String @db.ObjectId
  user User @relation(fields: [userId], references: [id])
  issueDate DateTime
  returnDate DateTime
  @@map("loans")
}
